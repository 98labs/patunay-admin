{
  "name": "patunay-app",
  "private": true,
  "version": "1.0.14",
  "type": "module",
  "author": "Geoffrey and JohnHoneyman",
  "main": "dist-electron/main.js",
  "repository": "https://github.com/gundam0910/patunay-app",
  "publish": [
    {
      "provider": "github",
      "owner": "gundam0910",
      "repo": "patunay-app"
    }
  ],
  "scripts": {
    "dev": "npm-run-all --parallel dev:react dev:electron",
    "dev:react": "vite",
    "dev:electron": "npm run transpile:electron && cross-env NODE_ENV=development electron .",
    "devmac:electron": "npm run transpile:electron; NODE_ENV=development electron .",
    "build:react": "vite build",
    "build:electron": "npm run transpile:electron && electron-builder",
    "build": "npm run clean && npm run transpile:electron && npm run build:react && electron-builder",
    "lint": "eslint .",
    "preview": "vite preview",
    "transpile:electron": "tsc --project src/electron/tsconfig.json",
    "dist:mac": "npm run transpile:electron && npm run build && electron-builder --mac --arm64",
    "dist:win": "npm run transpile:electron && npm run build && electron-builder --win --x64",
    "dist:linux": "npm run transpile:electron && npm run build && electron-builder --linux --x64",
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "clean": "rimraf dist-electron dist-react dist out"
  },
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "electron_quick_start"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  },
  "dependencies": {
    "@reduxjs/toolkit": "^2.7.0",
    "@supabase/supabase-js": "^2.49.4",
    "@tailwindcss/vite": "^4.1.3",
    "@tanstack/react-table": "^8.21.3",
    "daisyui": "^5.0.12",
    "electron-squirrel-startup": "^1.0.1",
    "electron-updater": "^6.6.2",
    "lucide-react": "^0.487.0",
    "moment": "^2.30.1",
    "nfc-pcsc": "^0.8.1",
    "os-utils": "^0.0.14",
    "papaparse": "^5.5.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-redux": "^9.2.0",
    "react-router-dom": "^7.5.0",
    "theme-change": "^2.5.0"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.8.0",
    "@electron-forge/maker-deb": "^7.8.0",
    "@electron-forge/maker-rpm": "^7.8.0",
    "@electron-forge/maker-squirrel": "^7.8.0",
    "@electron-forge/maker-zip": "^7.8.0",
    "@eslint/js": "^9.21.0",
    "@tailwindcss/postcss7-compat": "^2.2.17",
    "@types/node": "^22.14.1",
    "@types/os-utils": "^0.0.4",
    "@types/papaparse": "^5.3.15",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.21",
    "cross-env": "^7.0.3",
    "electron": "^35.1.1",
    "electron-builder": "^26.0.12",
    "electron-rebuild": "^3.2.9",
    "eslint": "^9.21.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^15.15.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.3",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "rimraf": "^6.0.1",
    "tailwindcss": "^4.1.3",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.24.1",
    "vite": "^6.2.0"
  },
  "description": "This template provides a minimal setup to get React working in Vite with HMR and some ESLint rules.",
  "keywords": [],
  "license": "ISC",
  "build": {
    "appId": "com.patunay.app",
    "productName": "Patunay",
    "files": [
      "dist/",
      "dist-electron/",
      "dist-react/",
      "node_modules/",
      "package.json"
    ],
    "directories": {
      "buildResources": "build",
      "output": "dist"
    },
    "extraResources": [
      {
        "from": "./src/assets",
        "to": "assets"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "build/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "build/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "uninstallDisplayName": "Patunay",
      "license": "license.md",
      "allowToChangeInstallationDirectory": true
    }
  }
}
